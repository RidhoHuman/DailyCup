# Prevent PHP Execution in Upload Directory
# CRITICAL SECURITY: This prevents uploaded PHP files from being executed

<FilesMatch "\.php$">
    Require all denied
</FilesMatch>

# Deny access to all files except images
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Require all granted
</FilesMatch>

# Additional protection
Options -Indexes -ExecCGI
RemoveHandler .php .phtml .php3
RemoveType .php .phtml .php3

# Prevent .htaccess override
AllowOverride None
