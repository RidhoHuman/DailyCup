# DailyCup Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# Application
APP_NAME="DailyCup Coffee Shop"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost/DailyCup

# Database Configuration
DB_HOST=localhost
DB_NAME=dailycup_db
DB_USER=root
DB_PASS=

# Security Keys
# Generate random keys: php -r "echo bin2hex(random_bytes(32));"
JWT_SECRET=your-secret-jwt-key-here-change-this-in-production
SESSION_SECRET=your-secret-session-key-here-change-this-in-production

# Email Configuration (Optional - for future use)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@dailycup.com
MAIL_FROM_NAME="${APP_NAME}"

# OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60
RATE_LIMIT_WINDOW=900
