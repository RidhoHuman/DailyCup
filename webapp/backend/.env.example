# DailyCup Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Application Settings
# ===========================================
APP_ENV=development
APP_DEBUG=true

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_NAME=dailycup
DB_USER=root
DB_PASS=

# ===========================================
# JWT Authentication
# Generate a secure key: php -r "echo bin2hex(random_bytes(32));"
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# Xendit Payment Gateway
# Get your keys from: https://dashboard.xendit.co
# ===========================================
XENDIT_SECRET_KEY=xnd_development_xxxxx
XENDIT_CALLBACK_TOKEN=your-callback-token-from-xendit
XENDIT_WEBHOOK_SECRET=your-webhook-secret-for-hmac
XENDIT_CALLBACK_URL=https://api.dailycup.com/notify_xendit.php
XENDIT_DEBUG=0

# ===========================================
# VAPID / Web Push Notifications
# Generate keys: npx web-push generate-vapid-keys
# ⚠️ CRITICAL: VAPID_PRIVATE_KEY is SECRET - Never commit to git!
# ===========================================
VAPID_PUBLIC_KEY=BCwYIp_KdBciOsn7zQr4kZuw5T0F_BfElFMRitd4re1CGJpJxOw1VT3uL-p5qsLgl-Xf-ZChXaH7oztommeXD4Q
VAPID_PRIVATE_KEY=gGK23jTD3DwJcX4t5o8CVBsYL_8ooGBvoBLNFrKFSak
VAPID_SUBJECT=mailto:support@dailycup.com

# App URL (used for links in emails)
APP_URL=https://dailycup.com

# ===========================================
# Midtrans Payment Gateway (Alternative)
# Get your keys from: https://dashboard.midtrans.com
# ===========================================
MIDTRANS_SERVER_KEY=SB-Mid-server-xxxxx
MIDTRANS_CLIENT_KEY=SB-Mid-client-xxxxx
MIDTRANS_IS_PRODUCTION=false

# ===========================================
# CORS Configuration
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ===========================================
# Audit Logging
# ===========================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# Twilio & Integration Worker
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+1415...
TWILIO_ALERT_FAILED_THRESHOLD=5
TWILIO_ALERT_RETRY_THRESHOLD=100

# Security Alerts
SECURITY_ALERT_EMAIL=
SECURITY_ALERT_SLACK_WEBHOOK=

# SMTP / Mailer (PHPMailer)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USER=
SMTP_PASS=
MAIL_FROM=no-reply@dailycup.com
MAIL_FROM_NAME=DailyCup
