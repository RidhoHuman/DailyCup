# DailyCup Backend Environment Variables

# === Database Configuration ===
DB_HOST=localhost
DB_NAME=dailycup_db
DB_USER=root
DB_PASS=

# === Payment Gateway Configuration ===

# Midtrans Configuration
# Get your keys from: https://dashboard.midtrans.com/
# Use sandbox for testing, production for live
MIDTRANS_SERVER_KEY=your_midtrans_server_key_here
MIDTRANS_CLIENT_KEY=your_midtrans_client_key_here
MIDTRANS_IS_PRODUCTION=false

# Xendit Configuration (Alternative payment gateway)
# Get your keys from: https://dashboard.xendit.co/
XENDIT_SECRET_KEY=your_xendit_secret_key_here
XENDIT_CALLBACK_URL=http://localhost/DailyCup/webapp/backend/api/notify_xendit.php
XENDIT_CALLBACK_TOKEN=your_random_token_here
XENDIT_DEBUG=1

# === Application Settings ===
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/DailyCup/webapp

# === Email Configuration ===
# For PHPMailer
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=noreply@dailycup.com
SMTP_FROM_NAME=DailyCup

# === Security ===
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE_HOURS=24

# === CORS ===
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# === Rate Limiting ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# === File Upload ===
MAX_FILE_SIZE=5242880
UPLOAD_PATH=../public/uploads/